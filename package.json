{
  "name": "chipster",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "pnpm install && turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e --filter=@micoblanc/chipster",
    "test:e2e:ui": "turbo run test:e2e:ui --filter=@micoblanc/chipster",
    "test:e2e:debug": "turbo run test:e2e:debug --filter=@micoblanc/chipster",
    "lint": "turbo run lint",
    "dev:docs": "turbo run dev --filter=docs",
    "clean": "turbo run clean && rm -rf node_modules **/node_modules"
  },
  "devDependencies": {
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.2"
}

