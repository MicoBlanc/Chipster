{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
    "@/*": ["./*"]
    },
  },
  
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "theme.config.js", 
    "pages/properties/2validation-transformation/validationRules.mdx",  
    "../chipster/src/**/*.ts",
    "../chipster/src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
