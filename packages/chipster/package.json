{
  "name": "@micoblanc/chipster",
  "version": "1.2.2",
  "description": "A composable and flexible multi-entry input component for React",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "style": "dist/styles.css", 
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev:test": "vite --port 3000 --host",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "prepublishOnly": "pnpm run build",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "react",
    "input",
    "multi-entry",
    "tags",
    "chips",
    "component"
  ],
  "author": "Mico Blanc <blancmico@gmail.com>",
  "license": "MIT",
  "homepage": "https://chipster.micoblanc.me/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micoblanc/chipster.git"
  },
  "bugs": {
    "url": "https://github.com/micoblanc/chipster/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "classnames": "^2.3.2"
  },
  "devDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "@testing-library/dom": "^9.3.3",
    "@playwright/test": "^1.40.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "rollup": "^3.28.0",
    "rollup-plugin-postcss": "^4.0.2",
    "postcss": "^8.4.12",
    "cssnano": "^6.0.1",
    "autoprefixer": "^10.4.0",
    "@rollup/plugin-terser": "^0.4.3"
  },
  "packageManager": "pnpm@9.12.2",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.esm.js"
    },
    "./styles.css": "./dist/styles.css",
    "./dist/styles.css": "./dist/styles.css"
  }
}
